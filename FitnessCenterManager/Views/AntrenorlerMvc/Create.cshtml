@model FitnessCenterManager.Models.ViewModels.AntrenorCreateViewModel
@{
    ViewData["Title"] = "Yeni Antrenör Ekle";
}

<h2>Yeni Antrenör Ekle</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Antrenor.AntrenorAd" class="form-label"></label>
        <input asp-for="Antrenor.AntrenorAd" class="form-control" />
        <span asp-validation-for="Antrenor.AntrenorAd" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Antrenor.AntrenorSoyad" class="form-label"></label>
        <input asp-for="Antrenor.AntrenorSoyad" class="form-control" />
        <span asp-validation-for="Antrenor.AntrenorSoyad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Uzmanlýk Alanlarý</label>
        <div>
            @foreach (var u in Model.Uzmanliklar)
            {
                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           name="SeciliUzmanliklar"
                           value="@u.Id"
                           id="uzmanlik_@u.Id"
                           @(Model.SeciliUzmanliklar.Contains(u.Id) ? "checked" : "") />
                    <label class="form-check-label" for="uzmanlik_@u.Id">@u.Ad</label>
                </div>
            }
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Hizmetler</label>
        <div>
            @foreach (var h in Model.Hizmetler)
            {
                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           name="SeciliHizmetler"
                           value="@h.Id"
                           id="hizmet_@h.Id"
                           @(Model.SeciliHizmetler.Contains(h.Id) ? "checked" : "") />
                    <label class="form-check-label" for="hizmet_@h.Id">@h.Ad</label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Ýptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}