@model FitnessCenterManager.Models.ViewModels.HizmetlerIndexViewModel
@{
    ViewData["Title"] = "Hizmetler";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0"><i class="bi bi-list-check text-success"></i> Hizmetler</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Ekle
    </a>
</div>

@if (!Model.Hizmetler.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Henuz hizmet tanimlanmamis. Yukaridaki butondan yeni ekleyebilirsiniz.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Hizmet Adi</th>
                    <th>Uzmanlik Alani</th>
                    <th>Aciklama</th>
                    <th class="text-center">Ucret</th>
                    <th class="text-center" style="width: 150px;">Islemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Hizmetler)
                {
                    <tr>
                        <td>
                            <strong><i class="bi bi-check-circle text-success"></i> @item.Ad</strong>
                        </td>
                        <td>
                            @if (item.UzmanlikAlani != null)
                            {
                                <span class="badge bg-info">@item.UzmanlikAlani.Ad</span>
                            }
                            else
                            {
                                <span class="text-muted">Genel</span>
                            }
                        </td>
                        <td>@item.Aciklama</td>
                        <td class="text-center">
                            <span class="badge bg-secondary">@item.Ucret.ToString("N2") TL</span>
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="text-primary me-2"
                               title="Düzenle">
                                Düzenle
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="text-danger"
                               title="Sil">
                                Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div class="mt-3">
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Panele Don
    </a>
</div>
