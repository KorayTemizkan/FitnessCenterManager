@model FitnessCenterManager.Models.Hizmet
@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<h2>Yeni Hizmet Ekle</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="UzmanlikAlaniId" class="form-label">Uzmanlik Alani</label>
                <select asp-for="UzmanlikAlaniId" asp-items="ViewBag.UzmanlikAlanlari" class="form-select">
                </select>
                <span asp-validation-for="UzmanlikAlaniId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Ad" class="form-label">Hizmet Adi</label>
                <input asp-for="Ad" class="form-control" placeholder="Ornek: Hizli Kilo Verme" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Aciklama" class="form-label">Aciklama</label>
                <textarea asp-for="Aciklama" class="form-control" rows="3" 
                          placeholder="Bu hizmet hakkinda kisa bir aciklama..."></textarea>
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Ucret" class="form-label">Ucret (TL)</label>
                        <input asp-for="Ucret" class="form-control" type="number" step="0.01" min="0" />
                        <span asp-validation-for="Ucret" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Kaydet
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Iptal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
