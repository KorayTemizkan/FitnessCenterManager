@model IEnumerable<FitnessCenterManager.Models.Randevu>
@{
    ViewData["Title"] = "Randevular";
    var isAdmin = (bool)ViewBag.IsAdmin;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0"><i class="bi bi-calendar3 text-danger"></i> @(isAdmin ? "Tum Randevular" : "Randevularim")</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-calendar-plus"></i> Yeni Randevu Al
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> 
        @if (isAdmin)
        {
            <span>Sistemde kayitli randevu bulunmuyor.</span>
        }
        else
        {
            <span>Henuz randevunuz bulunmuyor. Yukaridaki butondan yeni randevu alabilirsiniz.</span>
        }
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Tarih / Saat</th>
                    @if (isAdmin)
                    {
                        <th>Uye</th>
                    }
                    <th>Antrenor</th>
                    <th>Hizmet</th>
                    <th class="text-center">Durum</th>
                   
                        <th class="text-center" style="width: 150px;">Islemler</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var tarihTR = item.RandevuTarihi.AddHours(3);
                    <tr>
                        <td>
                            <strong><i class="bi bi-calendar-event text-primary"></i> @tarihTR.ToString("dd MMMM yyyy")</strong><br />
                            <small class="text-muted"><i class="bi bi-clock"></i> @tarihTR.ToString("HH:mm") - @tarihTR.AddHours(1).ToString("HH:mm")</small>
                        </td>
                        @if (isAdmin)
                        {
                            <td>@(item.Uye?.UserName ?? "Bilinmiyor")</td>
                        }
                        <td><i class="bi bi-person text-warning"></i> @item.Antrenor?.AntrenorAd @item.Antrenor?.AntrenorSoyad</td>
                        <td><span class="badge bg-success">@item.Hizmet?.Ad</span></td>
                        <td class="text-center">
                            @if (item.Onaylandi)
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Onaylandi</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark"><i class="bi bi-hourglass-split"></i> Bekliyor</span>
                            }
                        </td>
                            <td class="text-center">

                            @if (isAdmin)
                            {
                                @if (!item.Onaylandi)
                                {
                                    <form asp-action="Approve"
                                          asp-route-id="@item.Id"
                                          method="post"
                                          style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="btn btn-link text-success p-0 me-2">
                                            Onayla
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="Unapprove"
                                          asp-route-id="@item.Id"
                                          method="post"
                                          style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="btn btn-link text-warning p-0 me-2">
                                            Onay Kaldýr
                                        </button>
                                    </form>
                                }
                            }

                            <form asp-action="Update"
                                  asp-route-id="@item.Id"
                                  method="post"
                                  style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit"
                                        class="btn btn-link text-warning p-0 me-2">
                                    Duzenle
                                </button>
                            </form>

                            <form asp-action="Delete"
                                  asp-route-id="@item.Id"
                                  method="post"
                                  style="display:inline;"
                                  onsubmit="return confirm('Bu randevuyu silmek istediginize emin misiniz?');">
                                @Html.AntiForgeryToken()
                                <button type="submit"
                                        class="btn btn-link text-danger p-0">
                                    Sil
                                </button>
                            </form>

                            </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div class="mt-3">
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Panele Don
    </a>
</div>
